<body>
    <div class="container">
        <header class="header">
            <h1>Delete Appeal</h1>
            <nav class="navigation">
                <a href="/" class="nav-link">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M3 12h18M3 12L9 6M3 12l6 6"/>
                    </svg>
                    Back to Feed
                </a>
            </nav>
        </header>

        <form class="appeal-form" id="appealForm" action="/submit-appeal" method="POST">
            <div class="form-group">
                <input type="email" 
                       id="email" 
                       name="email" 
                       required 
                       pattern="[^@\s]+@[^@\s]+\.[^@\s]+"
                       placeholder=" ">
                <label for="email">Email Address</label>
                <div class="error-message">Please provide a valid email address.</div>
            </div>

            <div class="form-group">
                <input type="text" 
                       id="postId" 
                       name="postId" 
                       required 
                       pattern="[0-9]+"
                       placeholder=" ">
                <label for="postId">Post ID</label>
                <div class="error-message">Please provide a valid Post ID (numbers only).</div>
            </div>

            <div class="form-group">
                <textarea id="reason" 
                          name="reason" 
                          required 
                          maxlength="500"
                          placeholder=" "></textarea>
                <label for="reason">Reason for Appeal</label>
                <div class="error-message">Please provide a reason for your appeal.</div>
                <div class="char-counter">
                    <span id="charCount">500</span> characters remaining
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="submit-btn">
                    <div class="submit-btn-content">
                        <span class="submit-text">Submit Appeal</span>
                        <svg class="submit-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M22 2L11 13M22 2l-7 20-4-9-9-4 20-7z"/>
                        </svg>
                    </div>
                    <div class="submit-btn-animation">
                        <div class="circle"></div>
                        <svg class="checkmark" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M20 6L9 17l-5-5"/>
                        </svg>
                    </div>
                </button>
                
                <button type="button" class="cancel-btn" onclick="window.location.href='/'">
                    <span>Cancel</span>
                </button>
            </div>
        </form>
    </div>

    <script src="/js/delete-appeal.js"></script>
</body>
</html>